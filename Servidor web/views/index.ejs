<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SocialUGR - Login</title>
    <!--Estilo de la pagina-->
    <link rel="stylesheet" type="text/css" href="../public/css/login.css" />
    <script src="../public/scripts/login.js"></script>
</head>
<header>
    <img src="../imgs/logo.png" alt="Logo" id="logo" />
</header>
<!--Cuerpo de la pagina-->

<body>
    <aside>
        <div class="titulo">
            <p>Registrate</p>
        </div>

        <% if (nameMessage) { %>
            <div class="mensajeError">
                <%= nameMessage %>
            </div><br>
        <% } %>

        <% if (lastNameMessage) { %>
        <div class="mensajeError">
            <%= lastNameMessage %>
        </div><br>
        <% } %>

        <% if (usernameMessage) { %>
        <div class="mensajeError">
            <%= usernameMessage %>
        </div><br>
        <% } %>

        <% if (birthDateMessage) { %>
        <div class="mensajeError">
            <%= birthDateMessage %>
        </div><br>
        <% } %>

        <% if (genderMessage) { %>
        <div class="mensajeError">
            <%= genderMessage %>
        </div><br>
        <% } %>

        <% if (emailMessage) { %>
        <div class="mensajeError">
            <%= emailMessage %>
        </div><br>
        <% } %>

        <% if (signupMessage.length > 0) { %>
            <div class="mensajeError">
                <%= signupMessage %>
            </div><br>
        <% } %>

        <form id="registro" action="/signup" method="post">
            <label for="name">Nombre</label>
            <input type="text" name="name" placeholder="Introduce tu nombre">
            <br /><br />
            <label for="lastName">Apellidos</label>
            <input type="text" name="lastName" placeholder="Introduce tus apellidos">
            <br /><br />
            <label for="username">Usuario</label>
            <input type="text" name="username" placeholder="Introduce tu username">
            <br /><br />
            <label for="birthDate">Fecha de nacimiento</label>
            <input type="date" name="birthDate">
            <br /><br />
            Género:
            <select name="gender">
                <option value="male">Masculino</option>
                <option value="female">Femenino</option>
                <option value="other">Otro</option>
            </select><br /><br />
            <label for="email">Correo electronico</label>
            <input type="email" name="email" placeholder="Introduce tu correo">
            <br /><br />
            <label for="password">Contraseña</label>
            <input type="password" id="passwordR" name="password" placeholder="Introduce tu contraseña">
            <br />
            Mostrar Contraseña <input type="checkbox" onclick="OcultarPasswdR()">
            <br /><br />
            <div class="boton">
                <input type="submit" formaction="/perfilNuevo" class="button" value="Registrar">
            </div>
        </form><br />
    </aside>
    <section>
        <div class="titulo">
            <p>Identifícate</p>
        </div>

        <% if (loginMessage.length > 0) { %>
            <div class="mensajeError">
                <%= loginMessage %>
            </div><br>
        <% } %>

        <form id="identificacion" action="/login" method="post">
            <label for="username">Usuario</label>
            <input type="text" name="username" placeholder="Introduce tu username">
            <br /><br />
            <label for="password">Contraseña</label>
            <input type="password" id="passwordI" name="password" placeholder="Introduce tu contraseña">
            <br />
            Mostrar Contraseña <input type="checkbox" onclick="OcultarPasswdI()">
            <br /><br />
            <div class="boton">
                <input type="submit" class="button" value="Entrar">
            </div>
        </form>
        <br />
    </section>
</body>
<!--Pie de la pagina-->
<footer>
    <nav>
        All rights reserved © 2020 SocialUGR
    </nav>
</footer>

</html>