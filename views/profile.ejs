<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP 4 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="../public/css/perfil.css">
    <link rel="stylesheet" href="../public/css/feed.css">
    <link rel="shortcut icon" href="#">
    <title>SocialUGR - <% perfil.name %> <%= perfil.lastName %></title>
</head>
<body>
    <div class="contenedor">
        <%- include('layouts/header'); %>
        <div id="fantasma">
            No debe verse
        </div>
        <div id="portada">
            <img src="../imgs/<%= perfil.landscape %>" alt="imagen de portada">
        </div>
    
        <div id="imagenPerfil">
            <img src="../imgs/<%= perfil.image %>" width="200px" alt="Avatar">
        </div>
        <div id="fantasma">
            No debe verse
        </div>
        <div id="infoFollows">
            <table>
                <tr>
                    <th>
                        Followers
                    </th>
                    <th></th>
                    <th>
                        Following
                    </th>
                </tr>
                <tr>
                    <th>
                        <span id="numFollowers"><%= perfil.followers %></span>
                    </th>
                    <th></th>
                    <th>
                        <span id="numFollowing"><%= perfil.following %></span>
                    </th>
                    <th></th>
                    <th>
                        <div id="follow" onclick="toggleFollow(this)">
                            Follow
                        </div>
                    </th>
                </tr>
            </table>
        </div>
        <div id="info2">
            <span id="bios"><%= perfil.bios %></span>
        </div>
        <div id="bodyPerfil">
            <% posts.forEach(function(post){ %>
                <%- include('partials/post', {post:post}); %>
            <% }); %>
        </div>
    </div>
    <!-- Scripts -->
    <script type="text/javascript" src="../public/scripts/script.js"></script>
    <!-- Scripts BOOTSTRAP 4-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>